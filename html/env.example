# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=stimma
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# Mail Configuration
MAIL_HOST=your_mail_host
MAIL_PORT=465
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="stimma"
MAIL_SMTP_AUTH=true
MAIL_SMTP_DEBUG=0
# Add domain to allowed recipients with comma between domains. Example: MAIL_ALLOWED_RECIPIENTS=domain1.com,domain2.com
MAIL_ALLOWED_RECIPIENTS=domain1.com,domain2.com

# AI configuration
AI_SERVER=your_ai_server_url
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4
AI_MAX_COMPLETION_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_STREAM=false

# System parameters
SYSTEM_NAME="stimma"
SYSTEM_DESCRIPTION="Your system description"
SYSTEM_LOGO="https://yourdomain.com/logo.png"
SYSTEM_COLOR="#007bff"
SYSTEM_FONT="Arial, sans-serif"
SYSTEM_FONT_SIZE=16 